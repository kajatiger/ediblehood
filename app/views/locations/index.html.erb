<p id="notice"><%= notice %></p>

<h1>Listing Locations</h1>

<div class="locationsmap" style="width: 400px; height: 400px">

</div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCgfmYcnR_ODZPi8R2Q4s-LR2L5uX3gfMo"></script>

<script>
var locations = [];
<% for location in @locations %>
  locations.push({
    lat: <%= location.latitude %>,
    lng: <%= location.longitude %>,
    id: "<%= location.id %>",
    title: "<%= location.title %>",
    imageUrl: "<%= location.image_url %>",
    createdAt: "<%= location.created_at %>",
    permission: "<%= location.permission %>",
    growingStatus: "<%= location.growing_status %>"
  });
<% end %>
buildMap(locations);
</script>

<%= link_to 'New Location', new_location_path %>
